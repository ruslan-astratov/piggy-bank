{
  "scripts": {
    "serve": "parcel index.html",
    "start": "parcel ./*.html",
    "predeploy": "rm -rf dist && parcel build ./*.html --public-url https://ruslan-astratov.github.io/piggy-bank/",
    "deploy": "gh-pages -d dist",
    "lint": "prettier --check *.{js,html,css} **/*.{js,html,css}",
    "lint:fix": "prettier --write *.{js,html,css} **/*.{js,html,css}"
  },
  "dependencies": {
    "gh-pages": "^3.1.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "parcel": "*",
    "prettier": "2.2.1"
  }
}
